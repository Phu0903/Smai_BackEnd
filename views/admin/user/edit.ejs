<% include ../playout/header.ejs %>
    <!-- END TOPBAR -->
    <!-- START CONTAINER -->
    <div class="page-container row-fluid container-fluid">
        <!-- SIDEBAR - START -->

        <% include ../playout/menu.ejs %>


            <!--  SIDEBAR - END -->
            <!-- START CONTENT -->
            <section id="main-content" class=" ">
                <section class="wrapper main-wrapper row" style=''>
                    <div class='col-xs-12'>
                        <div class="page-title">
                            <div class="pull-right hidden-xs">

                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-xs-12">
                        <section class="box ">
                            <header class="panel_header">
                                <h2 class="title pull-left">Information</h2>
                                <div class="actions panel_actions pull-right">
                                    <a class="box_toggle fa fa-chevron-down"></a>
                                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                                    <a class="box_close fa fa-times"></a>
                                </div>
                            </header>
                            <div class="content-body">
                                <div class="row">
                                    <form action="/admin/edit-user?_id=<%=user._id  %> " method="post" role="form">
                                        <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                            <div class="form-group">
                                                <label class="form-label" for="field-120334">Full Name</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    <input type="text" id="name" value="<%= user.FullName %> "
                                                        class="form-control" name="FullName">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                            <div class="form-group">
                                                <label class="form-label" for="field-120334">PhoneNumber</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    <input type="text" id="name" value="0<%=user.PhoneNumber%>"
                                                        class="form-control" name="PhoneNumber">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                            <div class="form-group">
                                                <label class="form-label" for="field-120334">Address</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    <input type="text" id="name" value="<%=user.Address %>"
                                                        class="form-control" name="Address">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                            <div class="form-group">
                                                <label class="form-label" for="field-120334">BirthDay</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    <input type="date" id="name" value="<%=user.Birthday %> "
                                                        class="form-control" name="BirthDay">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                            <div class="text-left">
                                                <button type="submit" class="btn btn-primary"
                                                    onclick="redirectThisPage()">Save</button>
                                                <button type="button" class="btn"
                                                    onclick="redirectThisPage()">Cancel</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </section>
            <!-- END CONTENT -->
            <div class="chatapi-windows ">
            </div>
            <% include ../playout/footer.ejs %>
                <script>
                    function redirectThisPage() {
                        location.href = "admin/all-user";
                    }
                </script>