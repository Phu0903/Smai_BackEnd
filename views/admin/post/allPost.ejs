<% include ../playout/header.ejs %>
    <!-- END TOPBAR -->
    <!-- START CONTAINER -->
    <div class="page-container row-fluid container-fluid">
        <!-- SIDEBAR - START -->

        <% include ../playout/menu.ejs %>


            <!--  SIDEBAR - END -->
            <!-- START CONTENT -->
            <section id="main-content" class=" ">
                <section class="wrapper main-wrapper row">
                    <div class="clearfix"></div>
                    <div class="col-lg-12">
                        <section class="box ">
                            <header class="panel_header">
                                <h2 class="title pull-left">ALL POST</h2>
                                <div class="actions panel_actions pull-right">
                                    <a class="box_toggle fa fa-chevron-down"></a>
                                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                                    <a class="box_close fa fa-times"></a>
                                </div>
                            </header>
                            <div style="text-align: right;">
                                <button class="btn btn-success" onclick="redirectCreatePost()">Crate new post</button>
                            </div>
                            <div class="content-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <!-- ********************************************** -->
                                        <table class="rwd-table container">
                                            <thead>
                                                <tr>
                                                    <th style="width: 50px;">
                                                        STT</th>
                                                    <th style="width: 80px; text-align: center;">
                                                        Type Author</th>
                                                    <th style="width: 170px;">
                                                        Author</th>
                                                    <th>Product</th>
                                                    <th>Title</th>
                                                    <th>Address</th>
                                                    <th style="width: 170px; text-align: center;">
                                                        Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% let i=0; %>
                                                    <% post.forEach(function(item){ i++;%>
                                                        <tr>
                                                            <td class="td-hover">
                                                                <%= i%>
                                                            </td>
                                                            <td class="td-hover">
                                                                <%= item.TypeAuthor%>
                                                            </td>
                                                            <td class="td-hover">
                                                                <%= item.NameAuthor %>
                                                            </td>
                                                            <td class="td-hover">
                                                                <%item.NameProduct.forEach(function(pr){%>
                                                                    <p>
                                                                        <%if(pr !=null){%>
                                                                            <%=pr.NameProduct%>
                                                                                <% } %>
                                                                    </p>
                                                                    <%})%>
                                                            </td>
                                                            <td class="td-hover">
                                                                <%= item.title %>
                                                            </td>
                                                            <td class="td-hover">
                                                                <%= item.address %>
                                                            </td>
                                                            <td style="text-align:center">
                                                                <button type="button" class="circle circle3"
                                                                    onclick="viewPost('<%=item._id%>')"><i
                                                                        class="fa fa-eye"></i>
                                                                </button>
                                                                <button type="button" class="circle circle1"
                                                                    onclick="deletePost('<%=item._id%>')"><i
                                                                        class="fa fa-trash-alt"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                        <%})%>
                                            </tbody>
                                        </table>
                                        <!-- ********************************************** -->
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </section>
            <!-- END CONTENT -->
            <div class="chatapi-windows ">

            </div>

            <% include ../playout/footer.ejs %>
                <script src="TT_Admin/assets/plugins/datatables/js/jquery.dataTables.min.js"
                    type="text/javascript"></script>
                <script src="TT_Admin/assets/plugins/datatables/extensions/TableTools/js/dataTables.tableTools.min.js"
                    type="text/javascript"></script>
                <script src="TT_Admin/assets/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js"
                    type="text/javascript"></script>
                <script
                    src="TT_Admin/assets/plugins/datatables/extensions/Responsive/bootstrap/3/dataTables.bootstrap.js"
                    type="text/javascript"></script>
                <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
                <script>
                    async function deletePost(id) {
                        await axios({
                            method: 'POST',
                            url: `<%=url %>/admin/remove-post?_id=${id}`
                        }).then(data => {
                            location.href = "admin/all-post";
                        })
                    }
                    function viewPost(id) {
                        let url = `admin/view-post?_id=${id}`
                        location.href = url
                    }
                    function redirectCreatePost() {
                        location.href = "admin/create-post";
                    }
                </script>