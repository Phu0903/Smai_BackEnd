<% include ../playout/header.ejs %>
    <!-- END TOPBAR -->
    <!-- START CONTAINER -->
    <div class="page-container row-fluid container-fluid">
        <!-- SIDEBAR - START -->

        <% include ../playout/menu.ejs %>


            <!--  SIDEBAR - END -->
            <!-- START CONTENT -->
            <section id="main-content" class=" ">
                <section class="wrapper main-wrapper row">
                    <div class="clearfix"></div>
                    <div class="col-lg-12">
                        <section class="box ">
                            <header class="panel_header">
                                <h2 class="title pull-left">DETAIL POST</h2>
                                <div class="actions panel_actions pull-right">
                                    <a class="box_toggle fa fa-chevron-down"></a>
                                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                                    <a class="box_close fa fa-times"></a>
                                </div>
                            </header>
                            <div class="content-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <!-- ********************************************** -->
                                        <div>
                                            <p><b>_id: </b>
                                                <%=post._id %>
                                            </p>
                                            <p><b>Product: </b>
                                                <%post.NameProduct.forEach(function(pr){%>
                                                    <p> &emsp;&emsp;- <%=pr.NameProduct %>
                                                    </p>
                                                    <%})%>
                                            </p>
                                            <p><b>Image: </b>
                                                <%post.urlImage.forEach(function(url){%>
                                                    <img src="<%=url  %>" style="width: 100px; height: 100px;" />
                                                    <% }) %>
                                            </p>
                                            <p><b>AuthorID: </b>
                                                <%=post.AuthorID%>
                                            </p>
                                            <p><b>Type Author: </b>
                                                <%=post.TypeAuthor%>
                                            </p>
                                            <p><b>Author's Name: </b>
                                                <%=post.NameAuthor%>
                                            </p>
                                            <p><b>Address: </b>
                                                <%=post.address%>
                                            </p>
                                            <p><b>Title: </b>
                                                <%=post.title%>
                                            </p>
                                            <p><b>Note: </b>
                                                <%=post.note%>
                                            </p>
                                            <p><b>Create At: </b>
                                                <%=post.updatedAt%>
                                            </p>
                                            <p><b>Update At: </b>
                                                <%=post.updatedAt%>
                                            </p>
                                        </div>
                                        <button class="btn" onclick="redirectThisPage()">BACK</button>
                                        <!-- ********************************************** -->
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </section>
            <!-- END CONTENT -->
            <div class="chatapi-windows ">

            </div>

            <% include ../playout/footer.ejs %>
